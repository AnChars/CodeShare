# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target 'CodeShare' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for CodeShare
  pod 'SnapKit', '~> 0'
  
  pod 'JKCategories'
  
  
  
  pod 'Alamofire', '~> 3.0'
  
  # 版本号规则
  # x.y.z
  # x 的改变代表一个大版本的升级换代，不和原来的版本兼容
  # y 的改变一般代表新功能的加入
  # z 的改变一般只是小的 bug 修复，功能修改...
  # pod 'Alamofire', '~> 3.0'
  
  # Mob产品公共库
  pod 'MOBFoundation_IDFA'
  # 短信发送 SDK
  pod 'SMSSDK'
  
  # ReactiveCocoa
  # 这个框架是 GitHub 官方团队开源的一个用于 iOS 上的函数响应式编程框架。
  # 如果想要在 iOS 上使用 MVVM 模式，配合这个框架最合适
  pod 'ReactiveCocoa', '~> 4.0'
  
  # 处理项目中所有的键盘问题
  pod 'IQKeyboardManager', '~> 3.0'
  # 全屏侧滑返回
  pod 'FDFullscreenPopGesture'
  
  # YYKit
  pod 'YYModel'

end
